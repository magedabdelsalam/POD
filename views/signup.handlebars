    <header>
        <div class="container">
            <div class="row">
                <div class="col s12">
                    <h3>Sign Up</h3>
                </div>
            </div>
        </div>
    </header>
    <section>
        <div class="container">
            <div class="row">
                <div class="col s12 m10 l8">
                    <form action="/signup" method="POST">
                        <div class="row">
                            <div class="col s12">
                                <p>
                                    <label>
                                        <input id="parent" name="role" type="radio" value="Parent" checked />
                                        <span>Parent</span>
                                    </label>
                                </p>
                                <p>
                                    <label>
                                        <input id="teacher" name="role" type="radio" value="Teacher" />
                                        <span>Teacher</span>
                                    </label>
                                </p>

                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="school" type="text" name="school" class="validate">
                                <label for="school">School</label>
                                <span class="helper-text" data-error="Wrong" data-success="Right"></span>
                            </div>
                            <div class="input-field col s12 m12 l6">
                                <input type="text" name="first" class="validate">
                                <label for="first">First Name</label>
                                <span class="helper-text" data-error="Wrong" data-success="Right"></span>
                            </div>
                            <div class="input-field col s12 m12 l6">
                                <input type="text" name="last" class="validate">
                                <label for="last">Last Name</label>
                                <span class="helper-text" data-error="Wrong" data-success="Right"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12 m12 l6">
                                <input id="email" type="email" name="email" class="validate">
                                <label for="email">Email</label>
                                <span class="helper-text" data-error="Wrong" data-success="Right"></span>
                            </div>
                            <div class="input-field col s12 m12 l6">
                                <input id="password" type="password" name="password" class="validate">
                                <label for="password">Password</label>
                                <span class="helper-text" data-error="Wrong" data-success="Right"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s12">
                                <input class="btn-large" type="submit" value="Create Profile">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>